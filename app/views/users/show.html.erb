<% if current_user %>
    <div id="createRailler" class="panel right">
        <h1>Create a Railler</h1>
        <p>
        <%= form_for @railler do |f| %>
            <%= f.textarea :content, class: 'raillerText' %>
            <%= f.submit "Railler!" %>
        <% end %>
        </p>
    </div>
    <% end %>
    <div id="railler" class="panel left">
        <h1>Your Railler Profile</h1>
        <div class="raillerWrapper">
            <img class="avatar" src="<%= @user.avatar_url %>">
            <span class="name"><%= @user.name %></span> @<%= @user.username %>
            <p>
            <%= @user.railler.size %> Raillers
            <span class="spacing">XX Followers</span>
            <span class="spacing">XX Following</span>
            </p>
        </div>
    </div>
    <div class="panel left">
        <h1>Your Railler</h1>
        <% @user.railler.each do |ribbit| %>
            <div class="raillerWrapper">
                <img class="avatar" src="<%= @user.avatar_url %>">
                <span class="name"><%= @user.name %></span> 
                @<%= @user.username %> 
                <span class="time"><%= time_ago_in_words(railler.created_at) %></span>
                <p> <%= railler.content %> </p>
            </div>
        <% end %>
    </div>
